#main
	padding 30px 0 50px
	background-color: #DEF5FB
	background-image url(../img/backs/main-bg.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	text-align: center
	&.bonus-main
		min-height calc(100vh - 239px)
.pre
	font-family: GB
.main-title
	font-size: 26px
	font-family: GB
	color #7DBE26
	margin 20px auto
	text-transform: uppercase
.main-subtitle
	font-size: 24px
	margin-top: 50px
.main-info
	background-image url(../img/backs/main-info-bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: 100% 100%
	padding 10px 30px
	text-align: center
	width 100%
	max-width 460px
	margin 20px auto
	span
		font-family: GB
		display block
.video-wrapper-main
	max-width 560px
	margin 0 auto 20px
	iframe
		background-color: transparent
		padding 8px
		border: 2px dashed #008b00
		background-clip: padding-box
#main.remind
	min-height calc(100vh - 239px)
.remind-main-title
	margin-top: 60px
	a
		display: inline-block
		color #1b5606
		text-decoration: underline
		&:focus
			text-decoration: underline
			color #1b5606
		&:hover
			text-decoration: none
			color #1b5606