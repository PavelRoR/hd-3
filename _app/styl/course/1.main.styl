#main
	padding 60px 0
	background-color: #DEF5FB
	background-image url(../img/backs/main-bg.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	text-align: center
.pre
	font-size: 16px
.main-title
	font-size: 36px
	font-family: GB
	color #7DBE26
	margin 30px 0 50px
	text-transform: uppercase
	small
		font-family: G
		text-transform: none
		display block
		font-size: 20px
		margin-bottom: 10px
.main-info
	background-image url(../img/backs/main-info-bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: 100% 100%
	padding 10px 30px
	text-align: center
	width 100%
	max-width 510px
	margin: 0 auto 50px
	&-text
		line-height: 24px
		span
			font-family: GB
			display: inline-block