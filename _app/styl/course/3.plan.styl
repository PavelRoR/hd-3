#plan
	padding 50px 0
	background-color: #DEF5FB
	border-top: 3px dashed #008B00
	border-bottom:  3px dashed #008B00
.lesson-list
	margin-bottom: 20px
	li
		margin-bottom: 5px;
		padding-left: 12px;
		position: relative;
		list-style: none;
		margin-left: 15px
		&:before
			content: '';
			display: block;
			position: absolute;
			top: 14px;
			left: 0;
			-webkit-border-radius: 50px;
			border-radius: 50px;
			width: 5px;
			height: 5px;
			background-color: #002400;
		&:first-child
			margin-left: 0
			&:before
				content: none
		span
			font-family: GB
	&-8
		margin-bottom: 150px
.general-title-plan-mobile
	display: none
.lessons-center-block
	position relative
	&:before
		content: ''
		display block
		position: absolute
		left -115px
		right 0
		top: -150px
		width 582px
		height 405px
		background-image url(../img/images/reasons-img.png)
		background-repeat no-repeat
		background-position: center
		z-index 0
	&-title
		text-align: center
		font-size: 66px
		font-family: GI
		line-height: 48px
		color #fff
		margin 290px 0 0
		position relative
		z-index 1
.button-plan
	margin-top: 50px