#authors
	padding 50px 0
	background-image url(../img/backs/authors-bg-1.png),url(../img/backs/authors-bg-2.png)
	background-repeat no-repeat, no-repeat
	background-position: top right, bottom left
	overflow hidden
.author
	margin 0 auto 40px
	width 100%
	max-width 420px
	&-title
		font-size: 24px
		font-family: GB
		text-align: center
		span
			font-size: 18px
			font-family: GI
			display block
			color #1b5606
			margin 30px 0
	&-img
		display block
		width 100%
		max-width 420px
		margin 0 auto 35px
	&-list
		list-style: none
		margin-bottom: 15px
.certs
	text-align: center
	&-title
		position relative
		margin 0 auto 40px
		text-align: center
		z-index 9
		span
			display block
			font-size: 24px
			font-family: GB
			color #1b5606
			padding 3px 15px
			width 370px
			margin 0 auto
			background-color #fff
			position relative
			z-index 9
		&:before
			content:  ''
			display block
			position: absolute
			top calc(50% + 1px)
			height 3px
			border-top: 3px dashed #006600
			width 1000%
			left 0
			right 0
			margin 0 auto
			z-index 0
.cert-img
	width 100%
	height 173px
	object-fit: cover
	object-position: center
	border: 3px dashed #C6E6B2