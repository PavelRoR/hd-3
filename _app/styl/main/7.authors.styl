#authors
	padding 50px 0
	background-image url(../img/backs/authors-bg-1.png),url(../img/backs/authors-bg-2.png)
	background-repeat no-repeat, no-repeat
	background-position: top right, bottom left
	overflow hidden
.author
	margin 0 auto 40px
	width 100%
	max-width 420px
	&-title
		font-size: 24px
		font-family: GB
		text-align: center
		span
			font-size: 18px
			font-family: GI
			display block
			color #1b5606
			margin 30px 0
	&-img
		display block
		width 100%
		max-width 420px
		margin 0 auto 35px
	&-list
		list-style: none
		margin-bottom: 15px
.certs
	text-align: center
	&-title
		position relative
		font-size: 24px
		font-family: GB
		margin-bottom: 40px
		color #1b5606
		text-align: center
		padding 0 15px
		&:before
		&:after
			content:  ''
			display block
			position: absolute
			top calc(50% - 0px)
			height 3px
			border-top: 3px dashed #006600
			width 1000px
			right calc(100% - 500px)
		&:after
			left calc(100% - 500px)
.cert-img
	width 100%
	height 173px
	object-fit: cover
	object-position: center
	border: 3px dashed #C6E6B2