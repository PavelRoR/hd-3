.checking {
	display: table;
	width 100%
	max-width 500px
	margin: 10px auto 0;
	text-align: left
}

.checking .check-label {
	font-family: GB
	color: #0c2902
	line-height: 14px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 25px;
	text-align: left;
	font-size: 14px
}

.checking .check-label a {
	font-family: G
	color: #0c2902
}
.checking .check-label a:focus
	text-decoration: none
.checking .check-label a:hover
	text-decoration: underline
.checking .check-label:before {
	content: '';
	background-color: transparent
	position: absolute;
	left: 0;
	top: 0;
	width: 14px;
	height: 14px;
	border none
	border-radius: 50px
	border: 1px solid #1b5606
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 3px;
	top: 3px;
	width: 8px;
	height: 8px;
	background-color: #1b5606
	border-radius: 50px
	opacity: 0;
	transform: rotate(41deg);
	transition: all 0.5s ease;
}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}
.check:checked + .check-label:after {
	opacity: 1;
	transition: all 0.5s ease;
}
