@media screen and (min-width 2295px)
	.container
		width 1400px
	body
		font-size: 20px
	#main
		padding 100px 0 50px
	.main-info
		margin 40px auto 60px
	.main-title
		font-size: 32px
	.main-subtitle
		font-size: 26px
	.button-bots
		margin-top: 60px
	.modal-dialog
		width 900px
@media screen and (max-width 991px)
	header
		padding 15px 0
	#logo
		float: none
		display block
		margin 0 auto 3px
		width 90px
		height 40px
	.contacts
		text-align: center
		float: none
		line-height: 16px
	.main-title
		font-size: 24px
	.main-subtitle
		font-size: 22px
@media screen and (max-width 767px)
	#main
		background-image: none
@media screen and (max-width 485px)
	body
		line-height: 1.3
	#logo
		width 70px
		height 31px
	.contact
		font-size: 12px
		line-height: 14px
		background-size 14px
		padding-left: 18px
		margin 0 5px
	.contact.contact-email
		padding-left: 20px
	#main
		padding 30px 0
	.main-title
		font-size: 22px
		margin 0 0 20px
	.main-subtitle
		margin-top: 20px
		font-size: 20px
	.main-subtitle
		font-size: 18px
	.remind-main-title
		margin-top: 0
	.button
		font-size: 20px
	footer
		padding 15px 0
	footer h5
		font-size: 18px
		line-height: 1
	.soc-buttons a
		margin 10px 5px 5px
	footer p
		font-size: 12px
	.modal-title
		font-size: 20px
		line-height: 1.1
	.bots-link
		width 50%
@media screen and (max-width 385px)
	.main-title
		font-size: 20px
	.button-bots
		margin-top: 30px
	.bots-link
		width 100%
	.main-subtitle
		margin-top: 0
	.button-thanks
		margin-bottom: 30px