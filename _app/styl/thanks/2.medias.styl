@media screen and (min-width 2560px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		min-height  calc(100vh - 232px)
	.main_title
		margin-top: 60px
	.main_subtitle
		margin 40px 0 50px
@media screen and (max-width 1199px)
	.contact
		font-size: 14px
@media screen and (max-width 991px)
	#header
		padding 15px 0
		margin-bottom: 10px
	#logo
		width 180px
		float: none
		display block
		margin 0 auto
	.contacts
		text-align: center
		float: none
		line-height: 20px
	.contact
		display: inline-block
		margin 5px 5px 0
	#footer p br
		display: none
@media screen and (max-width 767px)
	.mail_soc_buttons
		margin-bottom 30px
	#footer
		padding: 20px 0
	#header
		margin-bottom: 5px
	#logo
		width: 160px
	.contacts a .fa
	.contacts a .fa + span
		font-size: 13px
	.main_title
		font-size: 26px
		line-height: 1.2
	.main_subtitle
		margin 10px 20px
		font-size: 24px
		line-height: 1.2
	#footer h5
		font-size: 20px
		line-height: 1.3
	.soc_buttons a
		margin 10px 5px
	#footer #conditions, #footer p
		font-size: 12px
@media screen and (max-width 485px)
	#header
		padding 10px 0
	#logo
		width 160px
	.contact
		font-size: 14px
		background-size 16px
		padding-left: 21px
		margin 0 5px
	#main
		padding 0 0 30px
	.main_subtitle
		font-size: 24px
	.main_subtitle_2
		font-size: 20px
@media screen and (max-width 360px)
	.main_title
		font-size: 22px
	.main_subtitle
		font-size: 20px
	.main_subtitle_2
		font-size: 18px
	.mail_soc_buttons
		margin-bottom: 15px